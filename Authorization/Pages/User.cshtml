@page
@model Authorization.Pages.UserModel
@{
}


<div class="container mt-5">
    <h2 class="text-center mb-4">Welcome to your account!</h2>
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <strong>First Name:</strong> @Model.appUser?.FirstName
            </div>
            <div class="mb-3">
                <strong>Last Name:</strong> @Model.appUser?.LastName
            </div>
            <div class="mb-3">
                <strong>Email:</strong> @Model.appUser?.Email
            </div>
            <div class="mb-3">
                <strong>Address:</strong> @Model.appUser?.Address
            </div>
        </div>
    </div>
</div>


